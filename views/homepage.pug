extends layout

block content
  div.ps-hero-container
    div.ps-hero-banner
      img.ps-hero-banner-image(src= heroBanner.image)
      div.ps-hero-banner-content
        p.ps-hero-banner-title= heroBanner.title
        p.ps-hero-banner-subtitle !{heroBanner.subtitle}
        a.ps-cta-button(href= heroBanner.link data-dy-decision-id= heroBanner.decisionId) #{heroBanner.cta}
  div.ps-testimonial-container.interaction
    h1.interaction "Hello Jee!"
    p.conversion “He just went crazy for it! First time he plays with the same toy for days”
    p.ps-testimonial-author Lena Davidson, David the cat’s Mom
  if recommendations
    div.interaction hello
    div
      button.interaction
    div.interaction
      button 
    div.ps-container
      p.ps-product-recommendations-title We think you’ll like…
    div.ps-product-listing-container.interaction
      each product in recommendations  
        a.ps-prodcut-listing-item(href=`/product/${product.sku}` data-dy-slot-id= product.slotId)
          img.ps-prodcut-listing-item__image(src=product.image_url)
          p.ps-prodcut-listing-item__name= product.name
          p.ps-prodcut-listing-item__description= product.description
          p.ps-prodcut-listing-item__price $!{product.price.toFixed(2)}
  script(src='/javascripts/interactor.min.js')
  script.
      // An example instantiation with custom arguments
      var interactions = new Interactor({
        interactions            : true,
        interactionElement      : "interaction",
        interactionEvents       : ["mouseup", "touchstart", "touchend"],
        conversions             : true,
        conversionElement       : "conversion",
        conversionEvents        : ["mouseup", "touchend"],
        endpoint                : '/usage/interactions',
        async                   : true,
        debug                   : true
      });